{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "ES6",
      "ESNext.AsyncIterable"
    ],
    "sourceMap": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    // For enabling decorators
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "rootDir": "src",
    "typeRoots": [
      "./node_modules/@types",
      "src/types"
    ],
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "./*"
      ],
    }
    // "paths": {
    //   "@controllers": [
    //     "controllers/*"
    //   ],
    //   "@routes": [
    //     "routes/*"
    //   ]
    // },
  },
  "include": [
    "./src",
  ],
  "exclude": [
    "node_modules"
  ],
}